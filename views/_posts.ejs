
<div class="post">
        <div class="post-header">
            
            <div id="posts-user">
                <a href="/users/profile/<%= post.user.id %>"><%= post.user.name %></a> 
            </div>
            <div class="delete-post">
                <% if(locals.user && locals.user.id == post.user.id ){ %>
                    <a href="/post/destroy/<%= post._id %>">X</a>
                <% } %>
            </div>

        </div>

        <div class="post-body">
            <img src="<%= post.picture %>" alt="posts image">
        </div>
    
    <div class="post-discription-likes" >    
        <div class="post-discreption">
            <a href="/users/profile/<%= post.user._id %>"><%= post.user.name %>:</a> <%= post.content %>
        </div>

        <svg class="bi bi-chat-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M8 15c4.418 0 8-3.134 8-7s-3.582-7-8-7-8 3.134-8 7c0 1.76.743 3.37 1.97 4.6-.097 1.016-.417 2.13-.771 2.966-.079.186.074.394.273.362 2.256-.37 3.597-.938 4.18-1.234A9.06 9.06 0 008 15z"/>
        </svg>

        <div class="post-likes">
            <% if(locals.user){ %>
                    
                <a class="toggle-like-button" data-like="<%=post.likes.length%>" href="/likes/toggle/?id=<%=post.id%>&type=Post">
                    <%=post.likes.length %> <svg class="bi bi-heart" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M8 2.748l-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 01.176-.17C12.72-3.042 23.333 4.867 8 15z" clip-rule="evenodd"/>
                      </svg>
                </a>

            <% }else{ %>
                <%=post.likes.length %> <svg class="bi bi-heart" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M8 2.748l-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 01.176-.17C12.72-3.042 23.333 4.867 8 15z" clip-rule="evenodd"/>
                  </svg>
            <% } %>
            
        </div>

    </div>

        
    <div class="post-comment">
        <% for(comment of post.comments ){%>
            <%- include('_comments'); %>
        <% } %>
    </div>

    <div class="comment-form" >
        <form action="/comment/create" method="POST">
            <input name="content" autocomplete="off" placeholder="    your comment.....">
            <input type="hidden" name="id" value="<%= post.id %>">
            <input id="post-comm" type="submit"></input>
            <label for="post-comm">
                <span class="material-icons">
                    send
                </span>
            </label>
        </form>
    </div>


</div>    
        
    


